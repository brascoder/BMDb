<h2>Movies</h2>
<%= form_tag '/search', method: 'get' do %>
  <%= text_field_tag 'search_string', nil, placeholder: 'Search', class: '' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to 'Add a movie', new_movie_path, class: 'btn btn-primary' %>
<br>
<br>
<table class="table table-striped">
  <% @movies.each do |movie| %>
    <tr><td><%= link_to movie.title, movie %></td></tr>
  <% end %>
</table>
